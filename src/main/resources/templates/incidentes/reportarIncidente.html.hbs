{{#partial "principal"}}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="rounded-3 my-5 p-4 p-sm-5">
                    <h2 class="text-center">Reportar Incidente</h2>
                    <hr>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label for="establecimientos">Establecimiento</label>
                                <select class="form-select" id="establecimiento">
                                    <option value=""></option>
                                    {{#each establecimientos}}

                                        <option value="{{getNombre}}">{{getNombre}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col">
                                <label for="servicios">Servicios Disponibles</label>
                                <select class="form-select" id="servicios">
                                    <option value=""></option>
                                    {{#each servicios}}
                                        <option value="{{getDescripcion}}">{{getDescripcion}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- Utilizar otra manera de mostrar los servicios, quizÃ¡s con tarjetas. -->
                    <div class="form-group">
                        <label for="observaciones">Observaciones</label>
                        <textarea class="form-control" id="observaciones" rows="3"
                                  placeholder="Agregar observaciones" disabled></textarea>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary" disabled>Reportar Incidente
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/partial}}


