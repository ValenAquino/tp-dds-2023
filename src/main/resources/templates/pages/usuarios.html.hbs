{{#partial "principal" }}

<script src="/usuariosScript.js"></script>
    {{#if mensajeExito}}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                new bootstrap.Modal(document.getElementById('mensajeExitoModal')).show();
            });
        </script>
    {{/if}}
    <div class="d-flex justify-content-between align-items-center" style="margin-left: 2.3%;margin-right: 1.2%;margin-bottom: 1%;">
        <h1>Usuarios</h1>
        <div class="d-flex p-3">
            <a class="btn-agregar" href="/usuarios/nuevo" role="button">
                Agregar usuario
            </a>
        </div>
    </div>

    <div class="container shadow-sm">
        <div class="row p-3 border-bottom border-1">
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Username</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Nombre</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Apellido</span>
            </div>
            <div class="col-3 text-center">
                <span class="fs-5 fw-semibold">Correo electrónico</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Admin</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Acciones</span>
            </div>
        </div>

        {{#each usuarios}}
            <div class="row p-3 border-bottom border-1">
                <div class="col text-center">
                    <span>{{usuario}}</span>
                </div>
                <div class="col text-center">
                    <span>{{nombre}}</span>
                </div>
                <div class="col text-center">
                    <span>{{apellido}}</span>
                </div>
                <div class="col-3 text-center">
                    <span>{{correoElectronico}}</span>
                </div>
                <div class="col text-center">
                    <span>{{formatearEsAdmin esAdmin}}</span>
                </div>
                <div class="col text-center">

                {{#intIsEqual logged_user_id id}}
                {{else}}
                    <a class="mr-1" href="/usuarios/{{id}}">
                        <i title="Editar" class="fa-solid fa-pencil"></i>
                    </a>
                    <button title="Eliminar" type="button" style="background-color: transparent; border: none;"
                            data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal"
                            data-usuario-id="{{id}}"
                        <i title="Eliminar" data-usuario-id="{{id}}" class="fa-regular fa-trash-can red-icon"></i>
                    </button>
                {{/intIsEqual}}
                </div>
            </div>
        {{/each}}
    </div>

    <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" role="dialog" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmarEliminarModalLabel">Eliminar usuario</h5>
          </div>
          <form method="DELETE" class="m-0">
          <div class="modal-body">
            ¿Desea eliminar el usuario?
          </div>
          <div class="modal-footer">
            <button type="button" class="grey-button" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="card-red-button">Eliminar</button>
          </div>
          </form>
        </div>
      </div>
    </div>

    <div class="modal fade" id="mensajeExitoModal" tabindex="-1" role="dialog"
         aria-labelledby="mensajeExitoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mensajeExitoModalLabel">¡Genial!</h5>
                </div>
                <div class="modal-body">
                    <p>{{mensajeExito}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>

{{/partial}}

