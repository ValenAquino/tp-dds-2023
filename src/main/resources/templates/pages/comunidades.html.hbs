{{#partial "principal" }}
    <div class="d-flex justify-content-between">
        <h1>Comunidades</h1>
        <button class="btn btn-primary"><i class="fa-solid fa-plus"></i> Agregar comunidad</button>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Incidentes</th>
            <th scope="col">Miembros</th>
            <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        {{#each comunidades}}
            <tr>
                <th scope="row">{{nombre}}</th>
                <td>{{incidentes.length}}</td>
                <td>{{miembros.length}}</td>
                <td>
                    <a href="/comunidades/{{id}}"><i title="Ver Detalles" class="fa-solid fa-eye"></i></a>
                    <a href="/comunidades/editar/{{id}}"><i title="Editar" class="fa-solid fa-pencil"></i></a>
                    <a href="/comunidades/eliminar/{{id}}" onclick="return confirm('¿Está seguro que desea eliminar esta comunidad?');"><i title="Eliminar" class="fa-regular fa-trash-can"></i></a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/partial}}

