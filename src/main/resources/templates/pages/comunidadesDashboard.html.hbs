{{#partial "principal" }}
<script src="/comunidadesScript.js"></script>
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-left: 2%;">
        <h1>Comunidades</h1>
        <div class="d-flex p-3" style="margin-right: 0.5%;">
            <a class="btn-agregar" href="/comunidades" role="button">
                Agregar comunidad
            </a>
        </div>
    </div>

    <div class="container shadow-sm">
        <div class="row p-3 border-bottom border-1">
            <div class="col-4 text-center">
                <span class="fs-5 fw-semibold">Nombre</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Incidentes</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Miembros</span>
            </div>
            <div class="col text-center">
                <span class="fs-5 fw-semibold">Acciones</span>
            </div>
        </div>
        {{#each comunidades}}
            <div class="row p-3 border-bottom border-1">
                <div class="col-4 fw-semibold text-center">{{nombre}}</div>
                <div class="col text-center">{{incidentesAbiertos.length}}</div>
                <div class="col text-center">{{miembros.length}}</div>
                <div class="col text-center">
                    <a href="/comunidades/{{id}}/editar"><i title="Editar"
                                                                 class="fa-solid fa-pencil mr-1"></i></a>
                    <button type="button" style="background-color: transparent; border: none;"
                                                data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal"
                                                data-comunidad-id="{{id}}"
                                            <i data-comunidad-id="{{id}}" class="fa-regular fa-trash-can red-icon"></i>
                    </button>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" role="dialog" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmarEliminarModalLabel">Eliminar comunidad</h5>
          </div>
          <form method="POST" class="m-0">
          <div class="modal-body">
            Â¿Desea eliminar la comunidad?
          </div>
          <div class="modal-footer">
            <button type="button" class="grey-button" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="card-red-button">Eliminar</button>
          </div>
          </form>
        </div>
      </div>
    </div>
{{/partial}}

