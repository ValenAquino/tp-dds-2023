{{#partial "principal" }}
<style>
body {
    background-color: #131a26;
}
</style>

  <div class="m-0">
    <div class="">
        <div class="navbar-logo d-flex flex-row justify-content-center" style="margin-top: 5%;">
            <a href="/" class="d-flex flex-row justify-content-center"><img style="width: 70%;" src="logo.png" alt="Logo"></a>
        </div>
      <div class="col-sm-8 col-md-6 col-lg-4 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h3 class="card-title text-center mb-5">Iniciar sesión</h3>
            <form method="POST" action="/login">
                <input type="hidden" id="origin" name="origin" value={{origin}}>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Usuario">
                    <label for="usuario">Usuario</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Contraseña">
                    <label for="contrasenia">Contraseña</label>
                </div>
                {{#if mensaje_error}}
                    <div class="alert alert-danger" role="alert">
                        {{mensaje_error}}
                    </div>
                {{/if}}
                <div class="d-flex flex-row justify-content-center">
                    <button class="btn-login m-0" type="submit" style="width: 50%;">Ingresar</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/partial}}

