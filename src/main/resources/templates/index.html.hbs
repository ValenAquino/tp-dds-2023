{{#partial "principal" }}

    <h1>Mis comunidades</h1>
    <div class="d-flex flex-row flex-wrap">
        {{#each comunidades}}
            <div class="card">
                <h4>{{this.nombre}}</h4>
                <a href="/home/comunidades/{{this.id}}/incidentes">Ver incidentes</a>
            </div>
        {{/each}}
    </div>

    <h2>Incidentes Pendientes a Revisar</h2>
    <div class="d-flex flex-row flex-wrap">
        {{#each incidentes}}
        <div class="card-incidente">
            <h5>{{servicio.descripcion}}</h5>
            <h6>{{establecimiento.nombre}}</h6>

            <div class="d-flex flex-row">
                {{#if abierto}}
                    <div class="dot-red"></div>
                    <span>Abierto</span>
                {{else}}
                    <div class="dot-green"></div>
                    <span>Cerrado</span>
                {{/if}}
            </div>

            <span class="mt-2">{{fecha}} - {{reportante}}</span>
            <div class="text-area mt-1">
                {{observaciones}}
            </div>
            <div class="d-flex flex-row justify-content-end mt-1" style="height: 2.4rem;">
                {{#if abierto}}
                    <button type="button" class="btn btn-primary green-button" data-bs-toggle="modal" data-bs-target="#confirmarCierreModal" data-incident-id="{{id}}">Cerrar</button>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>

{{/partial}}

